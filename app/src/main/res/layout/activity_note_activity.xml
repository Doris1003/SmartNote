<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a99460.smartnote.note_activity"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a99460.smartnote.note_activity"
    >

    <include layout="@layout/title"/>

    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:textSize="18sp"
        android:textColor = "#1a3939"
        android:hint="Please add your notes."
        android:layout_marginTop="72dp"
        android:background="#fff2f0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        />

    <android.support.design.widget.FloatingActionButton

        android:id="@+id/record"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/record_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <ImageButton

            android:id="@+id/change"

            android:src="@drawable/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>


        <ImageButton
            android:layout_marginLeft="15dp"

            android:src="@drawable/delete"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change"
            android:layout_marginTop="80dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_marginTop="68dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="00：00：00"/>

    </RelativeLayout>

</RelativeLayout>