<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/huawenxingkai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="华文行楷"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/typefacetextView"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/katongjianti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="卡通简体"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/huawenxingkai"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/wawaziti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="娃娃字体"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/katongjianti"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/youyuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="幼圆字体"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wawaziti"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/initTypeface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="恢复默认字体"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/typefacetextView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="@string/app_introduction"
        android:layout_marginRight="16dp"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>
